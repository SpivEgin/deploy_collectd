FQDNLookup false
Interval 5

LoadPlugin uuid
<Plugin uuid>
    UUIDFile "/opt/mistio-collectd/uuid"
</Plugin>

LoadPlugin logfile
<Plugin logfile>
    File "/opt/mistio-collectd/log"
    LogLevel info
    Timestamp true
    PrintSeverity true
</Plugin>

LoadPlugin cpu
LoadPlugin df
LoadPlugin md
LoadPlugin thermal
LoadPlugin disk
LoadPlugin entropy
LoadPlugin interface
LoadPlugin load
LoadPlugin memory
LoadPlugin processes
LoadPlugin swap
LoadPlugin users

LoadPlugin ping
<Plugin ping>
     Host "8.8.8.8"
</Plugin>

LoadPlugin network
<Plugin network>
    TimeToLive 128
    <Server "{{ monitor }}" "25826">
        SecurityLevel Encrypt
        Username "{{ uuid }}"
        Password "{{ password }}"
    </Server>
    MaxPacketSize 1024
    Forward true
    ReportStats false
</Plugin>

Include "/opt/mistio-collectd/plugins/mist-python/include.conf"
